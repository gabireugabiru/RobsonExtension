{
    "name": "robsonanalyzer",
    "displayName": "Robson Analyzer",
    "description": "A extension for high level coding with robson",
    "version": "0.0.8",
    "publisher": "GabiruGabireu",
    "icon": "icons/robson_real.jpeg",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "repository": {
        "url": "https://github.com/gabireugabiru/RobsonExtension"
    },
    "activationEvents": [
        "onLanguage:robson",
        "onCommand:workbench.action.runTask"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "npm install && cd server && npm install && cd .."
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "main": "./out/extension",
    "devDependencies": {
        "@types/node": "^18.0.1",
        "@types/vscode": "^1.63.0"
    },
    "contributes": {
        "taskDefinitions": [
            {
                "type": "robson",
                "properties": {
                    "isBuildCommand": true
                }
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Robson Configuration",
            "properties": {
                "RobsonAnalyzer.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                }
            }
        },
        "iconThemes": [
            {
                "id": "robson-theme",
                "label": "robson",
                "path": "./theme/robson-icon-theme.json"
            }
        ],
        "icons": {
            "robson-icon": {
                "description": "my icon",
                "iconPath": "",
                "default": {
                    "fontPath": "myiconfont.woff",
                    "fontCharacter": "\\E001"
                }
            }
        },
        "snippets": [
            {
                "language": "robson",
                "path": "./snippets/snippets.json"
            }
        ],
        "languages": [
            {
                "id": "robson",
                "aliases": [
                    "robson",
                    "robson"
                ],
                "extensions": [
                    ".robson"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "robson",
                "scopeName": "source.robson",
                "path": "./syntaxes/robson.tmLanguage.json"
            }
        ]
    }
}